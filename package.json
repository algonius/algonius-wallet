    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.3",
    "typescript": "~5.8.3",
    "vite": "^7.0.0",
    "vite-plugin-static-copy": "^3.1.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/react": "^19.1.8",
