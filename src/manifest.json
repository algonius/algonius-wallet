{
  "manifest_version": 3,
  "name": "Algonius Wallet",
  "version": "1.0.0",
  "description": "Algonius Wallet - MCP-controlled multi-chain trading wallet with Native Host integration",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "permissions": [
    "storage",
    "unlimitedStorage",
    "activeTab",
    "scripting",
    "tabs",
    "webRequest",
    "alarms",
    "notifications",
    "nativeMessaging",
    "https://*.dexscreener.com/*",
    "https://*.gmgn.ai/*",
    "https://*.jupiter.ag/*",
    "https://*.uniswap.org/*",
    "https://*.1inch.io/*",
    "http://localhost/*"
  ],

  "host_permissions": ["https://*/*", "http://localhost:*/*"],

  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "https://*.dexscreener.com/*",
        "https://*.gmgn.ai/*",
        "https://*.jupiter.ag/*",
        "https://*.uniswap.org/*",
        "https://*.1inch.io/*"
      ],
      "js": ["content/content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Algonius Wallet",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["providers/wallet-provider.js"],
      "matches": ["<all_urls>"]
    }
  ],

  "externally_connectable": {
    "matches": ["http://localhost/*"]
  }
}
